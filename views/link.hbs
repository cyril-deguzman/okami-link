<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Login to Okami Link</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" type="text/css" href="/css/link.css">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/link.js"></script>
</head>
<body>
    <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form class="sign-in-form" id="loginform" method="POST">

            <a href="/" class="a-image"><img src="/images/logo.png" alt="" class="logo"></a>
            <h2 class="title">Sign in</h2>
            <p id="error-message-sign-in"></p>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email-sign-in" id="email-sign-in" class="field" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password-sign-in" id="password-sign-in" class="field" placeholder="Password" />
            </div>
            <input type="submit" id="login" name="login" value="Login" class="btn solid" />
          </form>

          <form class="sign-up-form" id="signupform" method="POST">
            <a href="/" class="a-image"><img src="/images/logo.png" alt="" class="logo"></a>
            <h2 class="title">Sign up</h2>
            <p id="error-message"></p>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="firstname" id="firstname" class="field" placeholder="First Name" />
            </div>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" name="lastname" id="lastname" class="field" placeholder="Last Name" />
            </div>
            <div class="input-field" id="email-validation">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email" id="email" class="field" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" id="password" class="field" placeholder="Password" />
            </div>
            <input type="submit" name="signup" id="signup" class="btn" value="Sign up" />
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>a new cub, perhaps?</h3>
            <p>
              Sign up and Join thousands of cultured people howling in Okami Link! Joining is as easy as howling to the moon.
            </p>
            <button class="btn transparent" id="sign-up-btn">
              Sign up
            </button>
          </div>
          <img src="/images/cubs.png" class="image" id="cubs" alt="" width ="70%"/>
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>already part of the pack?</h3>
            <p>
              Return to your den, Mighty Wolf. Taste and see the safe space you deserve.
            </p>
            <button class="btn transparent" id="sign-in-btn">
              Sign in
            </button>
          </div>
          <img src="/images/Lobo.png" class="image" alt="" width ="70%"/>
        </div>
      </div>
    </div>

    <script>
        const sign_in_btn = document.querySelector("#sign-in-btn");
        const sign_up_btn = document.querySelector("#sign-up-btn");
        const container = document.querySelector(".container");

        sign_up_btn.addEventListener("click", () => {
            container.classList.add("sign-up-mode");
        });

        sign_in_btn.addEventListener("click", () => {
            container.classList.remove("sign-up-mode");
        });
    </script>
</body>
</html>
